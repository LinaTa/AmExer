<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".ChooseCampus"
    android:background="#ffffff">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_maps"
        android:background="@color/wolfenbuettelBlue"
        android:text="@string/maps"
        android:focusable="false"
        android:textColor="#ffffff"
        android:inputType="none"
        android:gravity="center"
        android:layout_gravity="left|top"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/editText_maps">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/campusExer"
            android:id="@+id/international_office"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_shape"
            android:textColor="#ffffff"
            android:textStyle="normal"
            android:width="200dp"
            android:elevation="20dp"
            android:elegantTextHeight="true"
            android:clickable="true"
            android:layout_above="@+id/Immatrikulationsbuero"
            android:layout_centerHorizontal="true"
            android:focusableInTouchMode="true"
            android:height="60dp"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/campusSalzdahlumer"
            android:id="@+id/Immatrikulationsbuero"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:background="@drawable/round_shape"
            android:width="200dp"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"
            android:elevation="10dp"
            android:height="60dp"
            android:layout_alignLeft="@+id/international_office"
            android:layout_alignStart="@+id/international_office" />
    </RelativeLayout>


</RelativeLayout>









