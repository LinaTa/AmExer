<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/backgroundOstfalia"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".DataCenter">

    <EditText
        android:id="@+id/editText_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:background="@color/wolfenbuettelBlue"
        android:focusable="false"
        android:gravity="center"
        android:inputType="none"
        android:text="@string/dataCenter"
        android:textColor="#ffffff" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="24dp"
        android:paddingTop="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal|top"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/data_center_text"
                style="0.20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/open"
                android:textColor="@color/ostfaliaGreen"
                android:textIsSelectable="false"
                android:textSize="20sp" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:layout_weight="0.50">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:height="25dp"
                        android:background="@drawable/cell_shape"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_span="3"
                        android:height="25dp"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:text="@string/semester"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:height="28dp"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/monday"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Mo_Re1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:height="28dp"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="@string/data_center_9_12" />

                    <TextView
                        android:id="@+id/Mo_Re2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:height="28dp"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="@string/data_center_13_15" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:height="28dp"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:text="@string/Tue"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Tue_Re1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:height="28dp"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:text="@string/data_center_9_12" />

                    <TextView
                        android:id="@+id/Tue_Re2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:height="28dp"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:text="@string/data_center_13_15" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:height="28dp"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:text="@string/We"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/We_Re1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:height="28dp"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:text="@string/data_center_9_12" />

                    <TextView
                        android:id="@+id/We_Re2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:height="28dp"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:text="@string/data_center_13_15" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:height="28dp"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:text="@string/Thu"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Thu_Re1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:height="28dp"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:text="@string/data_center_9_12" />

                    <TextView
                        android:id="@+id/Thu_Re2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:height="28dp"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:text="@string/data_center_13_15" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:height="28dp"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:text="@string/Fr"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Fr_Re1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:height="28dp"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:text="@string/data_center_9_12" />

                    <TextView
                        android:id="@+id/Fr_Re2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:height="28dp"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:text="@string/free" />
                </TableRow>

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px" />
            </TableLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.30">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:background="@android:drawable/ic_menu_call"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/linearLayout"
                    android:layout_toEndOf="@+id/linearLayout"
                    android:layout_gravity="left"
                    android:layout_weight="0.30"
                    android:id="@+id/data_center_phone" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@android:drawable/ic_dialog_email"
                    android:layout_weight="0.30"
                    android:layout_gravity="right"
                    android:id="@+id/data_center_email" />

                </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</RelativeLayout>